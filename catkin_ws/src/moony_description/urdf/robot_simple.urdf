<?xml version="1.0"?>
<robot name="first_robot">
    <link name="base_link">
        <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
            <cylinder radius="0.06" length="0.09"/>
        </geometry>
        </visual>
    </link>
    
    <link name="wheel_1_link">
        <visual>
            <origin rpy="1.57 0 0" xyz="0 0.03 0"/>
            <geometry>
                <cylinder radius="0.06" length="0.02"/>
            </geometry>
        </visual>
    </link>
    
    <joint name="roll_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_1_link"/>
        <origin xyz="0 0.03 0.01" rpy="0 0 0"/>
        <!-- <limit lower="-0.2" upper="0.2" effort="0.1" velocity="0.005"/> -->
        <axis xyz="0 1 0"/>
    </joint>
    
</robot>
