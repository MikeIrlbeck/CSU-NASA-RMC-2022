<launch>
    <!-- Load joint controller configurations from YAML file to parameter server -->
    <rosparam file="$(find moony_description)/config/moony_controller.yaml" command="load"/>
    <!-- <rosparam file="$(find moony_description)/config/differential_drive.yaml" command="load" /> -->

    <!-- load the controllers -->

    <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
    output="screen" ns="/moony" args="wheel_1_joint_position_controller joint_state_controller 
        wheel_2_joint_position_controller wheel_3_joint_position_controller wheel_4_joint_position_controller
        " />
<!-- mobile_base_controller -->

    <!-- convert joint states to TF transforms for rviz, etc -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
    respawn="false" output="screen">
    <remap from="/joint_states" to="/moony/joint_states" />
    </node>
			
</launch>