<launch>

  <param name="robot_description" command="$(find xacro)/xacro '$(find moony_description)/robot/robot_skid.urdf.xacro'" />
        <arg name="x" value="0.0" />
        <arg name="y" value="0.0" />
        <arg name="z" value=".5" />
        <arg name="robot_name" value="moony" />

  <!-- Gazebo model spawner -->
  <node name="spawn_moony_model" pkg="gazebo_ros" type="spawn_model"
        args="-x $(arg x) -y $(arg y) -z $(arg z)  -model $(arg robot_name) -unpause -urdf -param robot_description"/>

</launch>
