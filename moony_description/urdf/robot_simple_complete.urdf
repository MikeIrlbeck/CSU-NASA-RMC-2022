<?xml version="1.0"?>
<robot name="first_robot">
    <material name="blue">
        <color rgba="0 0 0.8 1"/>
    </material>
    <material name="red">
        <color rgba="0.8 0 0 1"/>
    </material>
    <material name="green">
        <color rgba="0 0.8 0 1"/>
    </material>
    <material name="grey">
        <color rgba="0.75 0.75 0.75 1"/>
    </material>
    <material name="white">
        <color rgba="1.0 1.0 1.0 1"/>
    </material>
    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <link name="base_link">
        <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
            <box size="1.5 .6 .05"/>
        </geometry>
        <material name="green"/>
        </visual>
    </link>
    
    <link name="wheel_1_link">
        <visual>
            <origin rpy="1.57 0 0" xyz="0 0 0"/> <!-- center of the wheel -->
            <geometry>
                <cylinder radius="0.125" length="0.03125"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>
    
    <joint name="wheel_1_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_1_link"/>
        <origin xyz="0.5 0.315625 0" rpy="0 0 0"/> <!-- joint location -->
        <limit effort="0.1" velocity="0.01"/>
        <axis xyz="0 1 0"/>
    </joint>

    <link name="wheel_2_link">
        <visual>
            <origin rpy="1.57 0 0" xyz="0 0 0"/> <!-- center of the wheel -->
            <geometry>
                <cylinder radius="0.125" length="0.03125"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>
    
    <joint name="wheel_2_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_2_link"/>
        <origin xyz="-0.5 0.315625 0" rpy="0 0 0"/> <!-- joint location -->
        <limit effort="0.1" velocity="0.01"/>
        <axis xyz="0 1 0"/>
    </joint>
    
    <link name="wheel_3_link">
        <visual>
            <origin rpy="1.57 0 0" xyz="0 0 0"/> <!-- center of the wheel -->
            <geometry>
                <cylinder radius="0.125" length="0.03125"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>
    
    <joint name="wheel_3_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_3_link"/>
        <origin xyz="0.5 -0.315625 0" rpy="0 0 0"/> <!-- joint location -->
        <limit effort="0.1" velocity="0.01"/>
        <axis xyz="0 1 0"/>
    </joint>

    <link name="wheel_4_link">
        <visual>
            <origin rpy="1.57 0 0" xyz="0 0 0"/> <!-- center of the wheel -->
            <geometry>
                <cylinder radius="0.125" length="0.03125"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>
    
    <joint name="wheel_4_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_4_link"/>
        <origin xyz="-0.5 -0.315625 0" rpy="0 0 0"/> <!-- joint location -->
        <limit effort="0.1" velocity="0.01"/>
        <axis xyz="0 1 0"/>
    </joint>
</robot>
