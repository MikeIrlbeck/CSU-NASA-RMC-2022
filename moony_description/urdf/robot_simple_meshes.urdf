<?xml version="1.0"?>
<robot name="first_robot">

    <link name="base_link">
        <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
            <!-- <box size="1.5 .6 .05"/> -->
            <mesh filename="package://nasa_rmc/models/meshes/frame.dae"/>
        </geometry>
        <!-- <material name="green"/> -->
        </visual>
    </link>
    
    <link name="wheel_1_link">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0.0"/> <!-- center of the wheel -->
            <geometry>
                <!-- <cylinder radius="0.125" length="0.03125"/> -->
                <mesh filename="package://nasa_rmc/models/meshes/wheel.dae"/>
            </geometry>
            <!-- <material name="black"/> -->
        </visual>
    </link>
    
    <joint name="wheel_1_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_1_link"/>
        <origin xyz="0.5 0.315625 0" rpy="0 0 0"/> <!-- joint location -->
        <limit effort="0.1" velocity="0.01"/>
        <axis xyz="0 1 0"/>
    </joint>

</robot>