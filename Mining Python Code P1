# Handle the motor controllers
#https://answers.ros.org/question/245514/dc-motor-encoder-python/
import logging
import serial
import time import sleep

serialPort = serial.Serial(port = "COM1", baudrate = 115200,
                           bytesize = 8, timeout = 2, stopbits = serial.STOPBITS_ONE)
# configure UART  # open() – This will open the serial port# close() – This will close the serial port# readline() – This will read a string from the serial port# read(size) – This will read n number of bytes from the serial port# write(data) – This will write the data passed to the function to the serial port# in_waiting – This variable holds the number of bytes in the buffer

pandaport = serial.Serial('COM1', 9600)

#send info to RX pin on lattePanda
# Belt Motor
def set_motor_belt(self, speed):
    # print("MotorBelt", speed)
    # speed = map_sabertooth(speed * 1)
    self.ard0.analog_write(self.Belt, speed*255)
    return

sleep(2)
def motor_control():
    def forward():
        pandaport.write(b'F')
    def reverse():
        pandaport.write(b'R')
def stop(self, smooth=False):
    # TODO smooth stop
    logging.info("Stopping motors")
    self.SetMotorBelt(0)
    return self.status

time.sleep(2)
motor_control()
