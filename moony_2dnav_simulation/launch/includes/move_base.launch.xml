<!--
    ROS navigation stack with velocity smoother and safety (reactive) controller
-->
<launch>
  <!--<include file="$(find turtlebot_navigation)/launch/includes/velocity_smoother.launch.xml"/>
  <include file="$(find turtlebot_navigation)/launch/includes/safety_controller.launch.xml"/>-->

  <arg name="odom_frame_id"/>
  <arg name="base_frame_id"/>
  <arg name="global_frame_id"/>
  <arg name="odom_topic"/>
  <arg name="laser_topic"/>
  <arg name="cmd_topic" />
  <!-- <arg name="custom_param_file" default="$(find moony_2dnav_simulation)/params/dummy.yaml"/> use if you want a custom parameter-->

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find moony_2dnav_simulation)/params/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find moony_2dnav_simulation)/params/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find moony_2dnav_simulation)/params/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find moony_2dnav_simulation)/params/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find moony_2dnav_simulation)/params/dwa_local_planner_params.yaml" command="load" />
    <rosparam file="$(find moony_2dnav_simulation)/params/move_base_params.yaml" command="load" />
    <rosparam file="$(find moony_2dnav_simulation)/params/global_planner_params.yaml" command="load" />
    <rosparam file="$(find moony_2dnav_simulation)/params/navfn_global_planner_params.yaml" command="load" />
    <!-- external params file that could be loaded into the move_base namespace -->
    <!-- <rosparam file="$(arg custom_param_file)" command="load" /> -->

    <!-- reset frame_id parameters using user input data -->
    <param name="global_costmap/global_frame" value="$(arg global_frame_id)"/>
    <param name="global_costmap/robot_base_frame" value="$(arg base_frame_id)"/>
    <param name="local_costmap/global_frame" value="$(arg odom_frame_id)"/>
    <param name="local_costmap/robot_base_frame" value="$(arg base_frame_id)"/>
    <param name="DWAPlannerROS/global_frame_id" value="$(arg odom_frame_id)"/>

    <remap from="cmd_vel" to="$(arg cmd_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
    <remap from="scan" to="$(arg laser_topic)"/>
  </node>
</launch>
